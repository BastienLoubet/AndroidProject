<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#029fff"
        android:orientation="vertical">

        <TextView
            style="@style/textPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailTime" />

        <EditText
            android:id="@+id/detailTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:inputType="numberDecimal" />

        <TextView
            style="@style/textPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailDistance" />

        <EditText
            android:id="@+id/detailDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:inputType="numberDecimal" />

        <TextView
            style="@style/textPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailSwimStyle" />

        <Spinner
            android:id="@+id/detailSwimStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/SwimStyle"
             />

        <TextView
            style="@style/textPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailDate" />

        <EditText
            android:id="@+id/detailDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:inputType="date" />

        <TextView
            style="@style/textPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailComment" />

        <EditText
            android:id="@+id/detailComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle" />

        <CheckBox
            android:id="@+id/isCompetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="@string/isCompetition" />

        <TextView
            style="@style/textPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailRanking" />

        <EditText
            android:id="@+id/detailRanking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:inputType="numberDecimal" />

        <TextView
            style="@style/textPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailLigue" />

        <EditText
            android:id="@+id/detailLigue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:inputType="text" />


        <Button
            android:id="@+id/detailButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/button"/>

        <Button
            android:id="@+id/detailButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/button"/>

    </LinearLayout>
</ScrollView>
